{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <style>
        body {
            background-image: url('{{ asset('images/foot13.jpeg') }}');
            background-size: cover;
            margin: 0; 
            display: flex;
            flex-direction: column;
            align-items: center; 
            justify-content: center; 
            height: 100vh; 
        }

        h1 {
            font-size: 3em;
            margin-bottom: 20px;
            color: white;
            text-align: center;
        }

        .custom-btn {
            display: block;
            padding: 10px 20px;
            color: white;
            text-align: center;
            text-decoration: none;
            background-color: transparent;
            border: 2px solid gray;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
            margin-bottom: 10px; 
        }

        .custom-btn:hover {
            background-color: gray;
            color: white;
        }

        .sign-out-container {
            position: absolute; 
            top: 10px; 
            right: 10px; 
            background-color: #d9534f; 
            padding: 10px;
            border-radius: 5px;
            text-align: center;
        }

        .sign-out-text {
            color: white;
            text-decoration: none; 
            font-weight: bold; 
        }

        .sign-out-text:hover {
            text-decoration: underline;
        }

        {% block extra_styles %}{% endblock %}
    </style>
{% endblock %}

{% block body %}
    <div class="sign-out-container">
        <a href="{{ path('security_logout') }}" class="sign-out-text">Sign Out</a>
    </div>

    <div class="example-wrapper">
        <h1>Welcome To Sbika Football World</h1>
        <a class="btn btn-primary custom-btn" href="{{ path('Ajouter') }}">Ajouter Joueur</a>
        <a class="btn btn-primary custom-btn" href="{{ path('app_team') }}">Ajouter equipe</a>
        <a class="btn btn-primary custom-btn" href="{{ path('voir_equipes') }}">Voir equipes</a>
        <a class="btn btn-primary custom-btn" href="{{ path('home') }}">Voir joueurs</a>
    </div>
{% endblock %}
